public class Palindrome{
public static void main(String args[]){
        int x = 1221;
        int y = 0;

        int k = x;
        while(x!=0){
            int z = x % 10 ;
            y = (y * 10) + z ;
            x = x / 10;
        }
        System.out.println("Reversed Number is " + y);

        if (k == y){
            System.out.println(y + " is a palindrome");
        }else{
            System.out.println(y + " is not a Palindrome");
        }
}
}
